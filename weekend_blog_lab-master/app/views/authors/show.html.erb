<div class="container-fluid">
  <h2>Author:</h2>
  <div class="row">
    <div class="col-md-10">
  	 <table class="table table-striped">
  	 <tr>
  		  <th>First Name</th>
  		  <th>Last Name</th>
  		  <th>Age</th>
  	 </tr>
  	 <tr>
    		<td><%= @author.first_name %></td>
    		<td><%= @author.last_name %></td>
    		<td><%= @author.age %></td>
    	</tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%=  link_to('See Blog Posts', author_posts_path(@author), {class: "btn btn-primary"}) %>

<%=  link_to('Back to Authors', root_path, {class: "btn btn-primary"}) %>    
    </div>
  </div>
</div>
